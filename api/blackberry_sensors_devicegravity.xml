<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE reference PUBLIC "-//IXIA//DTD IXIA DITA Composite//EN" "../../system/dtd/ixia/IxiaDitabase.dtd">
<reference id="blackbery_sensors_devicegravity" xml:lang="en-us">
    <title><apiname>devicegravity()</apiname></title>
    <shortdesc><i>gravity information from the gravity sensor. Returned as m/s/s (meters/second/second).</i></shortdesc>
    <refbody>
        <section>
            <title>Synopsis:</title>
            <pre scale="80">devicegravity(data)</pre>
        </section>
        <section>
            <title>Parameters:</title>
            <dl>
                <dlentry>
                    <dt><varname>data</varname> {Object}</dt>
                    <dd><p>The object containing the sensor data.</p>
                        <dl>
                    	    <dlentry>
                    		    <dt><varname>data.x</varname> {Float}</dt>
                    		    <dd><p>The x-axis value.</p></dd>
                    	    </dlentry>
                            <dlentry>
                                <dt><varname>data.y</varname> {Float}</dt>
                                <dd><p>The y-axis value.</p></dd>
                            </dlentry>
                            <dlentry>
                                <dt><varname>data.z</varname> {Float}</dt>
                                <dd><p>The z-axis value.</p></dd>
                            </dlentry>
                        </dl>
                    </dd>
                </dlentry>
            </dl>
        </section>
    </refbody>
</reference>
